{
  "name": "tu-tien-multiplayer-game",
  "version": "1.0.0",
  "description": "Tu Tiên Multiplayer Game Server",
  "main": "server.js",
  "scripts": {
    "start": "node server-production.js",
    "start:dev": "node server-mongodb.js",
    "start:old": "node server.js",
    "dev": "nodemon server-production.js",
    "client": "npx http-server -p 8000",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t tu-tien-game .",
    "docker:run": "docker run -p 3000:3000 tu-tien-game",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "backup:db": "node scripts/backup-database.js",
    "restore:db": "node scripts/restore-database.js",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "deploy:production": "pm2 deploy production",
    "deploy:staging": "pm2 deploy staging"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.0.0",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pm2": "^5.3.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "game",
    "multiplayer",
    "socket.io",
    "tu-tien"
  ],
  "author": "Tu Tiên Game Team",
  "license": "MIT"
}
