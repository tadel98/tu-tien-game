{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/game-multiplayer.html",
      "dest": "/public/game-multiplayer.html"
    },
    {
      "src": "/auth.html",
      "dest": "/public/auth.html"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    }
  ]
}
